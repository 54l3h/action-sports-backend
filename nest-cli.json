{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "**/*.html",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "**/*.png",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "**/*.jpg",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "**/*.jpeg",
        "outDir": "dist",
        "watchAssets": true
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
